{
  "manifest_version": 3,
  "name": "ComponentCanvas",
  "version": "1.0.0",
  "description": "Capture web components from any site.",
  "action": {
    "default_popup": "index.html",
    "default_title": "ComponentCanvas"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ]
}